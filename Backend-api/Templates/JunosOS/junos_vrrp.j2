{% set int_nom = int_name.split(".")[0] %}
{% set unit = int_name.split(".")[1] %}

<config>
  <configuration>
             <interfaces>
                 <interface operation="merge">
                     <name>{{int_nom}}</name>
                     <unit>
                         <name>{{unit}}</name>
                         <family>
                             <inet>
                                 <address>
                                 <name>{{ip_int}}</name>
                                     <vrrp-group>
                                         <name>{{group}}</name>
                                         <virtual-address>{{virtual_ip}}</virtual-address>
                                         {% if priority %}
                                         <priority>{{priority}}</priority>
                                         {% endif %}
                                         {% if preempt %}
                                         <preempt> </preempt>
                                         {% endif %}
                                     </vrrp-group>
                                 </address>
                             </inet>
                         </family>
                     </unit>
                 </interface>
             </interfaces>
     </configuration>
   </config>
