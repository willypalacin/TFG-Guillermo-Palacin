{% set int_name = int_name.split(".")[0] %}
<config>
  <configuration>
    <interfaces>
      <interface operation="replace">
        <name>{{ int_name }}</name>
        <description>
          {{ description }}
        </description>
        <unit>
          <name>0</name>
          <family>
            <inet>
              <address>
                <name>{{ip}}/{{mask}}</name>
              </address>
              <dhcp operation="remove"/>
            </inet>
          </family>
        </unit>
      </interface>
    </interfaces>
  </configuration>
</config>
